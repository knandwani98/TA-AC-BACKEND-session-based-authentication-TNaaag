<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <main>
      <section class="hero">
        <!-- Banner -->
        <div class="banner-img"></div>
        <!-- Login Form -->
        <div class="banner-content flex f-center">
          <div>
            <img src="" alt="" />
          </div>
          <div class="form">
            <h1 class="center">Login</h1>
            <form action="/users/login" method="POST">
              <fieldset>
                <% if (flash) { %>
                <p class="flash"><%= flash %></p>
                <% } %>

                <input
                  class="form-box"
                  type="email"
                  name="email"
                  placeholder="email"
                />
                <input
                  class="form-box"
                  type="password"
                  name="password"
                  placeholder="password"
                />
                <a href="">
                  <button class="form-box btn">Login</button>
                </a>
                <a class="form-box btn btn2 center" href="/users/register"
                  >Create New Account</a
                >
              </fieldset>
            </form>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
