<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="register">
    <main>
      <section class="hero">
        <!-- Banner -->
        <div class="banner-img"></div>
        <!-- Login Form -->
        <div class="banner-content flex f-center">
          <div class="form">
            <h1 class="center">Register</h1>
            <form action="/users/register" method="POST">
              <fieldset>
                <input
                  class="form-box"
                  type="name"
                  name="name"
                  placeholder="name"
                />
                <input
                  class="form-box"
                  type="email"
                  name="email"
                  placeholder="email"
                />
                <input
                  class="form-box"
                  type="password"
                  name="password"
                  placeholder="password"
                />
                <a href="">
                  <button class="form-box btn">Create</button>
                </a>
                <p class="center">
                  already a member?
                  <a class="link2" href="/users/login"> Log in</a>
                </p>
              </fieldset>
            </form>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
